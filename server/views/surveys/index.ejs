<% include ../partials/header.ejs %>
<%- include ../partials/mainNav.ejs %>

<style>
  .userSurveyHeader{
    background: #6B787F;
    color: white;
    font-family: Arial, Helvetica, sans-serif;
  }
  .side-white{
    border-right:1px solid white;
     
  }

  tr,td{
    background: white;
    border: none;
  }

  body{
    background-color: #f0eeeea6; 
}
</style>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>  <% title %> </h3>

 

    

          
     
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover  ">
              <thead>
                <tr class="userSurveyHeader">
                  <% if(typeof displayName === 'string' && displayName ){ %>
                     
                    
                    
                    <th class="text-center">Title</th>
                    <th class="text-center">Start Date</th>
                    <th class="text-center">End Date</th>
                    <th class="text-center">View</th>
                    <th class="text-center">Analyze</th>
                    <th class="text-center">Modify</th>
                    <th>Delete</th>

                    <% } else {%>
                      <H3>LOGIN / REGISTER TO CREATE AND MANAGE SURVEY</H3>
                  <th>Survey Name</th>
                  <th class="text-center">Survey Owner</th>
                  <th class="text-center">Create Date</th>
                  <th class="text-center">Start Date</th>
                  <th class="text-center">End Date</th>
                   
                  <% } %>
                </tr>
                </thead>
                <tbody> 
                  
                  <% if(typeof displayName === 'string' && displayName ){ %>
                <% for (let count = 0; count < survey.length; count++) { %>
                <tr style="background-color: white;">
                  
                  <td><%= survey[count].surveyName %></td>
                  <td class="text-center"><%= survey[count].startDate %></td>
                  <td class="text-center"><%= survey[count].endDate %></td>
                  
                    
                  <td class="text-center"><a  href="/surveys/surveyview/<%=survey[count]._id %>" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a></td>
                  <td class="text-center">
                    <a href="/surveys/statistics/<%=survey[count]._id %>" class="btn btn-success btn-sm">
                    <i class="far fa-chart-bar"></i>
                  </a>
                  </td>

                  <% if(typeof displayName == 'string' && displayName ){ %> 
                  <td class="text-center">
                    <!-- ----------EDIT------- -->

                 
                     
                    
                    <a href="/surveys/<%=survey[count]._id %>" class="btn btn-primary btn-sm">
                     
                    <i class="fas fa-pencil-alt"></i>
                    </a>
                  </td>

                  <td class="text-center">
                    <!-- ---------DELETE----------- -->
                    <a href="/surveys/delete/<%=survey[count]._id %>" class="btn btn-danger btn-sm">
                      <i class="fas fa-trash alt"></i>
                      </a>   
                    <!-- ------------------------ -->
                  </td>
               
                <% } %>
              </tr>
                <% } %>
                <% } %>
              </tbody>
            </table>
          </div>


          <% if(typeof displayName === 'string' && displayName ){ %>
            <a href="surveys/add" class="btn btn-primary btn-success"><i class="fa fa-plus"></i> Create a Survey</a>
            <% } %>

            
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


